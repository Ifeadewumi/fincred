# Example environment configuration for FinCred backend
# Copy this file to .env and fill in the values

# ==============================================================================
# ENVIRONMENT
# ==============================================================================
# Options: development, staging, production
ENV=development

# Enable debug mode (automatically disabled in production)
DEBUG=false

# ==============================================================================
# APPLICATION
# ==============================================================================
PROJECT_NAME="FinCred API"
VERSION="0.1.0"

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
# PostgreSQL connection string
# Format: postgresql+psycopg2://user:password@host:port/database
SQLALCHEMY_DATABASE_URI=postgresql+psycopg2://fincred_user:your_password@localhost:5432/fincred

# Connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Set to true to log all SQL queries (development only)
DB_ECHO=false

# ==============================================================================
# SECURITY - JWT CONFIGURATION
# ==============================================================================
# CRITICAL: Generate a secure secret key and keep it safe!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# NEVER commit the actual secret to version control
JWT_SECRET_KEY=

# JWT algorithm (HS256 recommended for symmetric signing)
JWT_ALGORITHM=HS256

# Token expiration time in minutes (1440 = 24 hours)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ==============================================================================
# CORS CONFIGURATION
# ==============================================================================
# Comma-separated list of allowed origins
# Example: http://localhost:3000,https://app.fincred.com
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

CORS_ALLOW_CREDENTIALS=true

# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: console (human-readable) or json (structured, for production)
LOG_FORMAT=console

# ==============================================================================
# RATE LIMITING
# ==============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ==============================================================================
# PAGINATION
# ==============================================================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ==============================================================================
# EMAIL CONFIGURATION (for future implementation)
# ==============================================================================
# Email provider: mock, sendgrid, ses
EMAIL_PROVIDER=mock

# SendGrid API key (if using SendGrid)
# SENDGRID_API_KEY=your_sendgrid_api_key

# SMTP configuration (if using SMTP)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

